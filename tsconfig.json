{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "typeRoots": ["additional.d.ts", "node_modules/@types"],
    "sourceMap": false,
    "baseUrl": "./"
  },
  "include": ["additional.d.ts", "./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
